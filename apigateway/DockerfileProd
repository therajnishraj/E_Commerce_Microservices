# Stage 1: Build the application with Maven and OpenJDK 17
FROM maven:3.9.7-eclipse-temurin-17 AS build

# Set the working directory inside the container
WORKDIR /app/apigateway

# Copy the Maven configuration files
COPY apigateway/pom.xml ./
COPY apigateway/.mvn .mvn
COPY apigateway/mvnw ./
COPY apigateway/mvnw.cmd ./

# Copy the source code
COPY apigateway/src src

# Build the project with the 'docker' profile and create the executable JAR
RUN mvn clean package -DskipTests -Dspring.profiles.active=${SPRING_PROFILES_ACTIVE:-docker}

# Stage 2: Run the application using OpenJDK 17
FROM eclipse-temurin:17-jdk

# Set the working directory inside the container
WORKDIR /app

COPY apigateway/src/main/resources/keystore.jks /app/resources/

# Copy the built JAR file from the build stage
COPY --from=build /app/apigateway/target/gateway-service.jar /app/apigateway.jar

# Expose the port the application will run on
EXPOSE 8080 8443

# Command to run the application
ENTRYPOINT ["java", "-jar", "/app/apigateway.jar"]
